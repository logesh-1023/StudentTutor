<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css\dashboard.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Finding Tutors</title>
</head>
<body background="images\bok.jpg">
    <span style="font-size:30px;cursor:pointer;margin-top: 20px;" onclick="openNav()">&#9776; MENU</span>
    <center><h1 style="margin-top: -50px;">Finding Tutors</h1></center>
    <center><h1>Welcome</h1></center><br>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="/dashboard" class="active">Request Tutors</a>
        <a href="/">Logout</a>
    </div>
    <br><br>
    <div class="container-fluid">
      <div class="row">
        <div>
          <div class="head">
              <h1>Request Tutor</h1><br>
              <form method="post" action="/requesttutor" class="form" name="myForm" autocomplete="off">
                  <input type="text" name="tname" placeholder="Enter Tutor name" required> <br>
                  <p id="em" class="para">&nbsp</p>
                  <input type="text" name="sname" placeholder="Enter Subject" required> <br>
                  <p id="pn" class="para">&nbsp</p>
                  <input type="text" name="lname" placeholder="Enter Location" required> <br>
                  <p id="pn" class="para">&nbsp</p>
                  <button type="submit" class="btn btn-primary">Request</button>
              </form>
          </div>
      </div>
        <div class="col-sm-6">
          <table id="myTable">
          <thead>
            <tr>
              <th>Email</th>
              <th>Name</th>
              <th>Subject</th>
              <th>Location</th>
            </tr>
          </thead>
          <% msg.forEach(function(b){ %>
             <tr>
               <td><%=b.email%></td>
               <td><%=b.name%></td>
              <td> <%=b.subjects%></td>
              <td><%=b.location%></td>
            </tr> 
            <% })%> 
        </table>
        </div>
      </div>
    </div>
        <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script>
          $(document).ready( function () {
            $('#myTable').DataTable();
        } );
        function openNav() {
          document.getElementById("mySidenav").style.width = "250px";
        }
        
        function closeNav() {
          document.getElementById("mySidenav").style.width = "0";
        }
        </script>
</body>
</html>